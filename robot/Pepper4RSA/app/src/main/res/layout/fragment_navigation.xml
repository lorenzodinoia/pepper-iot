<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".NavigationFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/buttonLocalization"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Localizza"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"/>

        <Button
            android:id="@+id/buttonGioconda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gioconda"
            app:layout_constraintTop_toBottomOf="@id/buttonLocalization"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"/>

        <Button
            android:id="@+id/buttonMapFrame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Map frame"
            app:layout_constraintTop_toBottomOf="@id/buttonGioconda"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>